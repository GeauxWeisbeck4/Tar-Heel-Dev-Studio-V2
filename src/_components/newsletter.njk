<section class="newsletter-section py-10">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-3xl font-semibold mb-8 text-center">Subscribe to Our Newsletter</h2>
    <p class="text-gray-600 text-center mb-6">Stay up-to-date with our latest news, updates, and offers!</p>
    <form class="max-w-md mx-auto">
      <div class="flex flex-wrap -mx-2 mb-4">
        <div class="w-full md:w-1/2 px-2 mb-4">
          <label for="name" class="block text-gray-800 text-sm font-medium mb-1">Your Name</label>
          <input type="text" id="name" name="name" class="w-full p-2 border border-gray-300 rounded">
        </div>
        <div class="w-full md:w-1/2 px-2 mb-4">
          <label for="email" class="block text-gray-800 text-sm font-medium mb-1">Email Address</label>
          <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded">
        </div>
      </div>
      <div class="text-center">
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700">Subscribe</button>
      </div>
    </form>
  </div>
</section>